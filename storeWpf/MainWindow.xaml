<Window x:Class="storeWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:storeWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="id"></Label>
            <TextBox x:Name="itemID"></TextBox>
            <Label Content="Name"></Label>
            <TextBox x:Name="itemeName"></TextBox>
            <Label Content="price"></Label>
            <TextBox x:Name="itemPrice"></TextBox>
            <Button Height="20" Content="Add" Click="Button_Click"></Button>
        </StackPanel>
        <DataGrid x:Name="GVitems" Margin="0,217,0,0" Grid.Row="1">// but table in second row

        </DataGrid>

    </Grid>
</Window>
